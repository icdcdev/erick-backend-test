generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StatusAppointment {
  HABILITADA
  DESABILITADA
}

enum TimeZone {
  UTC
  America_New_York
  America_Chicago
  America_Denver
  America_Los_Angeles
  Europe_London
  Europe_Paris
  Asia_Kolkata
  Asia_Tokyo
  Australia_Sydney
  Pacific_Auckland
  America_Mexico_City
}

model Client {
  id              String   @id @default(uuid())
  name            String
  paternalSurname String
  maternalSurname String
  timeZone        TimeZone
  address         String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

